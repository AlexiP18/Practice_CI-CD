{
  "name": "mi-app",
  "version": "1.0.0",
  "description": "AplicaciÃ³n Node.js con CI/CD completo - Proyecto de ejemplo",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "docker:build": "docker build -t mi-app:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env mi-app:latest"
  },
  "keywords": [
    "nodejs",
    "express",
    "ci-cd",
    "digitalocean",
    "github-actions"
  ],
  "author": "AlexiP18",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
